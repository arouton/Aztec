struct azOutput
{
  float4 m_f4Position : POSITION;
  float3 f_f3color : COLOR;
};

azOutput main(uniform float4x4 a_mModelProjMatrix, uniform float a_fTime, in float4 a_f4Position : POSITION, in float4 a_f4Color : COLOR)
{	
  azOutput oOutput;

  oOutput.m_f4Position = mul(a_mModelProjMatrix, a_f4Position);
  oOutput.m_f4Position = oOutput.m_f4Position + 0.01f * float4(a_fTime, a_fTime, a_fTime, 0.f);
  oOutput.f_f3color = a_f4Color;

  return oOutput;	
}
